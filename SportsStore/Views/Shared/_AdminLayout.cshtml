<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/css/*.css" />
    <title>@ViewBag.Title</title>
    <style>
        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>
    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"> </script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
    <div class="bg-info p-2 row">
        <div class="bg-info p-2"> <h4>@ViewBag.Title</h4> </div>
        <div>
            <a class="btn btn-sm btn-primary"  style="margin-top:10px;"
               asp-action="Logout" asp-controller="Account">Log Out</a>
        </div>
    </div>
    
    @if (TempData["message"]!= null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    <div class="p-1">
        @RenderBody()
    </div>
</body>
</html>
