@model Product

<div class="card m-1 p-1">
    <div class="p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <form asp-controller="Cart"  asp-action="AddToCart"  method="post">
        <input type="hidden" name ="returnUrl" id="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <input type="hidden" name ="ProductID" id="ProductID" value="@Model.ProductID"/>
        <span class="card-text p-1">
            @Model.Description
            <button class="btn btn-success btn-sm pull-right" style="float:right">Add To Cart</button>
        </span>
    </form>
</div>